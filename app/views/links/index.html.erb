<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.url %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to new_link_path, method: :get, class:'button' do %>
    New Link
  <% end %>
<%= button_to init_monitor_path, method: :post, class:'button' do %>
    Init Monitor
  <% end %>
<%= button_to screenshots_path, method: :get, class:'button' do %>
    Screenshots
  <% end %>

